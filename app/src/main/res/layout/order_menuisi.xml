<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".order_menu.IsiOrder_menuActivity">

 <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">"

 <LinearLayout
            android:id="@+id/Order_menu_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"> 

 <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Isi ID_RESTO"
            android:id="@+id/edID_RESTO" /> 

 <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Isi ID_MENU"
            android:id="@+id/edID_MENU" /> 

 <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Isi ID_USERAPP"
            android:id="@+id/edID_USERAPP" /> 

 <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Isi JUMLAH"
            android:id="@+id/edJUMLAH" /> 

 <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Isi ORDER_DATE"
            android:id="@+id/edORDER_DATE" /> 

 <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Isi STATUS"
            android:id="@+id/edSTATUS" /> 

 <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Isi ALAMAT_PENGIRIMAN"
            android:id="@+id/edALAMAT_PENGIRIMAN" />

 <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submite"
        android:id="@+id/btnsimpan"/>

 </LinearLayout>
    </ScrollView>
    </RelativeLayout>